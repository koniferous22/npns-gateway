{
  "name": "npns-gateway",
  "version": "2.0.0",
  "description": "API Gateway for NPNS project",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start:dev": "ts-node-dev src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "orm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migrate:mongo": "node ./node_modules/migrate-mongo/bin/migrate-mongo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koniferous22/npns-gateway.git"
  },
  "keywords": [
    "Apollo",
    "Federation",
    "NPNS",
    "Typescript",
    "TypeGraphQL"
  ],
  "author": "koniferous22",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/koniferous22/npns-api/issues"
  },
  "homepage": "https://github.com/koniferous22/npns-api#readme",
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/uuid": "^8.3.0",
    "@types/wait-on": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "migrate-mongo": "^8.1.4",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@apollo/gateway": "^0.23.0",
    "apollo-server": "^2.19.2",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "wait-on": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.graphql": "graphql-schema-linter ./*.graphql"
  }
}
